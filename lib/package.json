{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@kanaka-prabhath/html-editor",
  "version": "1.1.9",
  "description": "A React-based WYSIWYG continuous HTML editor with rich text formatting and automatic page break insertion",
  "type": "module",
  "main": "./dist/htmleditor.umd.cjs",
  "module": "./dist/htmleditor.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/htmleditor.es.js",
      "require": "./dist/htmleditor.umd.cjs"
    },
    "./styles": "./dist/html-editor.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "react",
    "wysiwyg",
    "html-editor",
    "rich-text-editor",
    "contenteditable",
    "react-editor",
    "text-editor"
  ],
  "author": {
    "name": "Kanaka Prabhath",
    "url": "https://github.com/KanakaPrabhath"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KanakaPrabhath/htmleditor.git",
    "directory": "lib"
  },
  "scripts": {
    "build": "vite build",
    "lint": "eslint ."
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "prop-types": "^15.8.1"
  },
  "dependencies": {
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.3",
    "vite": "^7.1.7"
  }
}
