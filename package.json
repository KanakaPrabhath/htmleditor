{
  "name": "htmleditor-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for HTML Editor library and demo application",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:lib": "npm run build --workspace=packages/html-editor",
    "dev:demo": "npm run dev --workspace=packages/demo-app",
    "build:demo": "npm run build --workspace=packages/demo-app",
    "preview:demo": "npm run preview --workspace=packages/demo-app",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "lint": "eslint .",
    "publish:lib": "npm run build:lib && cd packages/html-editor && npm publish --access public"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.9.0",
    "@testing-library/react": "^16.3.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
