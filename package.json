{
  "name": "@htmleditor/react-editor",
  "version": "1.0.0",
  "description": "A React-based WYSIWYG continuous HTML editor with rich text formatting and automatic page break insertion",
  "type": "module",
  "main": "./dist/htmleditor.umd.cjs",
  "module": "./dist/htmleditor.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/htmleditor.es.js",
      "require": "./dist/htmleditor.umd.cjs"
    },
    "./styles": "./dist/react-editor.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "react",
    "wysiwyg",
    "html-editor",
    "rich-text-editor",
    "contenteditable",
    "redux"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Prabhath-Tharaka/htmleditor.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "vite build --mode library",
    "lint": "eslint .",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "react-redux": "^8.0.0 || ^9.0.0",
    "@reduxjs/toolkit": "^2.0.0"
  },
  "dependencies": {
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.55.1",
    "@reduxjs/toolkit": "^2.9.0",
    "@testing-library/jest-dom": "^6.9.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "framer-motion": "^11.0.0",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-redux": "^9.2.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  }
}
