{
  "name": "@prabhath-tharaka/html-editor",
  "version": "1.1.0",
  "description": "A React-based WYSIWYG continuous HTML editor with rich text formatting and automatic page break insertion",
  "type": "module",
  "main": "./dist/htmleditor.umd.cjs",
  "module": "./dist/htmleditor.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/htmleditor.es.js",
      "require": "./dist/htmleditor.umd.cjs"
    },
    "./styles": "./dist/html-editor.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "react",
    "wysiwyg",
    "html-editor",
    "rich-text-editor",
    "contenteditable",
    "redux",
    "react-editor",
    "text-editor"
  ],
  "author": "Prabhath Tharaka",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Prabhath-Tharaka/htmleditor.git",
    "directory": "packages/html-editor"
  },
  "scripts": {
    "build": "vite build",
    "lint": "eslint ."
  },
  "peerDependencies": {
    "@reduxjs/toolkit": "^2.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "react-redux": "^8.0.0 || ^9.0.0"
  },
  "dependencies": {
    "lucide-react": "^0.544.0",
    "prop-types": "^15.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.3",
    "vite": "^7.1.7"
  }
}
